{
  "compilerOptions": {
    "types": ["node", "jest"],
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "removeComments": true,
    "listEmittedFiles": false,
    "resolveJsonModule": true,
    "declarationDir": "typings",
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "*/*.spec.ts"]
}
